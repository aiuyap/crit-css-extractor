{
  "name": "crit-css-extractor",
  "version": "1.0.0",
  "description": "Production-ready critical CSS extractor optimized for Google PageSpeed Insights metrics",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:watch": "vitest",
    "test:single": "vitest run",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-results.json",
    "validate": "npm run lint && npm run type-check && npm run test"
  },
  "keywords": [
    "critical-css",
    "performance",
    "lighthouse",
    "pagespeed",
    "nextjs",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sparticuz/chromium": "^119.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "css-tree": "^2.3.0",
    "lucide-react": "^0.378.0",
    "next": "^14.2.0",
    "playwright": "^1.58.0",
    "playwright-core": "^1.58.0",
    "postcss": "^8.4.38",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.0",
    "@playwright/test": "^1.44.0",
    "@types/css-tree": "^2.3.11",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.4.0",
    "lighthouse": "^12.0.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
